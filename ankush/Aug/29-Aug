 $.ajax({
                url: "/ajax/blog/search",
                data: {q: $(this).attr('product-id')},
                dataType: 'json',
                success: function(data, status, xhr) {
                    $('#ajaxresponse').html(data.output);
                    document.getElementById('custom_product_modal').classList.add('_show');
                    var checkInterval = setInterval(function() {
                        var dat = JSON.parse(localStorage.getItem(
                        'mage-cache-storage'));

                        if (dat.cart) {
                            $('#total_items').text(dat.cart.summary_count);
                            $('#replace_price').text('£' + dat.cart.subtotalAmount);
                            clearInterval(checkInterval);

                        }
                    }, 1000)
                
                },
                error: function () {
                    // xhr, status, errorThrown - Params Error 
                    console.log('Error happens. Try again.');
                }
            });




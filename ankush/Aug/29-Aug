<?php
$objectManager = \Magento\Framework\App\ObjectManager::getInstance();
$product = $objectManager->create('Magento\Catalog\Model\Product')->load(3889);

$cartObj = $objectManager->get('\Magento\Checkout\Model\Cart');
$subTotal = $cartObj->getQuote()->getSubtotal(); //Current Cart Subtotal
$grandTotal = $cartObj->getQuote()->getGrandTotal(); //Cart Grand total
$summaryCount = round($cartObj->getQuote()->getItemsQty());
?>

<div id="modal-content">
    <?php //echo $block->getContent(); 
    ?>

    <div id='custom_product_modal'>
        <div class="modal-content" style="background:#f6f6f6">
            <div>
                <h2>Items was added to your basket</h2>

                <div class='modal_cutom_inner'>

                    <div class='image_section'>
                        <img src="<?php echo $product->getMediaConfig()->getMediaUrl($product->getImage()); ?>" alt="">
                    </div>

                    <div>
                        <h3>
                            <?php echo $product->getName(); ?>
                        </h3>
                        <h4> £<?php echo round($product->getFinalPrice(), 2); ?> </h4>
                    </div>

                </div>
            </div>

            <div>
                <h2 class='tright'>Your cart contains <span id='total_items'><?php echo $summaryCount; ?></span> items
                </h2>
                <div class='modal_cutom_inner2'>
                    <div> <span class='total_txt'> Total Amount: </span>
                        <h1> <span id='replace_price'>£<?php echo round($grandTotal, 2); ?></span> </h1>
                    </div>

                    <div class='btnlinks'>
                        <a href="javascript:;" id='continue_shopping'>Continue Shopping</a>
                        <a href="/checkout/">View Shopping Cart</a>
                    </div>

                </div>

            </div>
        </div>

        <div class="modal-content slider" data-role="content">
            <div class='slider_outer_wrapper'>
                <div class="owl-carousel owl-theme">
                    <?php $crossSellProducts = $product->getCrossSellProducts(); ?>
                    <?php
                    foreach ($crossSellProducts as $crossSellProducts) {
                        $crossProduct = $product->loadByAttribute('sku', $crossSellProducts->getSku());
                    ?>

                    <div class="item">
                        <a href='/<?php echo $crossProduct->getUrlKey(); ?>'>
                            <img
                                src="<?php echo $crossProduct->getMediaConfig()->getMediaUrl($crossProduct->getImage()); ?>">
                            <h5 class='slider_title'>
                                <?php echo $crossProduct->getName(); ?>
                            </h5>
                        </a>
                        <h6 class='txtcenterpr'>As low as <b
                                class='bldtxt'>£<?php echo bcadd(0, $crossProduct->getPrice(), 2); ?></b> </h6>

                        <?php
                            $listBlock = $objectManager->get('\Magento\Catalog\Block\Product\ListProduct');
                            $addToCartUrl =  $listBlock->getAddToCartUrl($crossProduct); ?>

                        <?php
                            if ($crossProduct->getTypeId() != 'configurable') { ?>
                        <form data-role="tocart-form" action="<?php echo $addToCartUrl; ?>" method="post">

                            <?php echo $block->getBlockHtml('formkey') ?>
                            <p class='tcenter'>
                                <button type="submit" title="Add to Cart" class="recommended_btn action tocart primary">

                                    <span>Add to Cart</span>
                                </button>
                            </p>

                        </form>
                        <?php
                            } else {
                                ?>
                        <p class='tcenter'>
                            <a href="/<?php echo $crossProduct->getUrlKey(); ?>" title="More Details" class="action tocart primary">

                                <span>More Details</span>
                            </a>
                        </p>
                        <?php 
                            }
                            ?>

                    </div>

                    <?php

                    }
                    ?>
                </div>
            </div>
        </div>
    </div>


</div>




<button id="example-modal-button" data-mage-init='{"recommended-modal": {"target": "#modal-content"}}'>
    Open Modal <span id='modal_pid'>3889</span>
</button>



<script>
require(
    [
        'jquery',
        'Magento_Ui/js/modal/modal',
        'cdz_slider'
    ],
    function(
        $,
        modal
    ) {
        $('.owl-carousel').owlCarousel({
            loop: true,
            margin: 10,
            items: 5,
            dots: false,
            responsiveClass: true,
            nav: true,
            responsive: {
                0: {
                    items: 2,
                    nav: true
                },
                600: {
                    items: 3,
                    nav: false
                },
                1000: {
                    items: 5,
                    nav: true,
                    loop: true
                }
            }

        });

        $('.recommended_btn').on('click', function(e) {
            e.preventDefault();

            var checkInterval = setInterval(function() {
                var dat = JSON.parse(localStorage.getItem('mage-cache-storage'));

                if (dat.cart) {
                    $('#total_items').text(dat.cart.summary_count);
                    $('#replace_price').text('£' + dat.cart.subtotalAmount);
                    clearInterval(checkInterval);

                }
            }, 1000);

            $(this).parents('form').submit();
        });

        var options = {
            type: 'popup',
            responsive: true,
            innerScroll: true,
            // title: 'Example Modal',
            buttons: []
            // buttons: [{
            //     text: $.mage.__('OK'),
            //     class: '',
            //     click: function() {
            //         this.closeModal();
            //     }
            // }]
        };

        var popup = modal(options, $('#modal-content'));
        // $('#modal-content').modal('openModal');
        // var popup = modal(options, $('#modal-content'));
        // $("#example-modal-button").on('click', function() {
        //     $('#total_items').text($('.counter-number').text());
        //     $('#replace_price').text($('.price-label .price').text());
        //     $("#modal-content").modal("openModal");
        // });
    }
);
</script>



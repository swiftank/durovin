require(['jquery', 'loader'], function($) {
    var checkPageload = setInterval(function(){
    stripeElement =  $('#checkout-payment-method-load').height();
    if(stripeElement > 300){
        document.getElementById('custom_container_loader').classList.add('loader_hide');
        clearInterval(stripeElement);
    }
  }, 1000);

});
